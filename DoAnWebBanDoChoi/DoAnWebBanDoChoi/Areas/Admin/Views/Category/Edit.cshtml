@model DoAnWebBanDoChoi.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container pt-4 px-4">
    <div class="bg-white rounded shadow p-4 border">
        <h5 class="mb-4 text-primary fw-bold">Chỉnh sửa danh mục</h5>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="MaDm" />
            <div class="mb-3">
                <label for="TenDanhMuc" class="form-label fw-semibold">Tên danh mục</label>
                <input asp-for="TenDanhMuc" class="form-control" />
                <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="DanhMuc" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>

