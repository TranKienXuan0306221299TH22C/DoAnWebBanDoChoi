@model List<DoAnWebBanDoChoi.Models.DanhMuc>

@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container pt-4 px-4">
    <div class="bg-white rounded shadow p-4 border">
        <h5 class="mb-4 text-danger fw-bold">Danh mục có thể xóa</h5>

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning d-flex align-items-center">
                <span class="me-2" style="font-size: 1.5rem;">⚠️</span>
                <div>Không có danh mục nào có thể xóa.</div>
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-danger text-center">
                    <tr>
                        <th>#</th>
                        <th>Tên danh mục</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dm in Model)
                    {
                        <tr>
                            <td class="text-center">@dm.MaDm</td>
                            <td>@dm.TenDanhMuc</td>
                            <td class="text-center">
                                <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa không?')">
                                    <input type="hidden" name="id" value="@dm.MaDm" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash me-1"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <a asp-action="DanhMuc" class="btn btn-secondary mt-3">Quay lại</a>
    </div>
</div>
