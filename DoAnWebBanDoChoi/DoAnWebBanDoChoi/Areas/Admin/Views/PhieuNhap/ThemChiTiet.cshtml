@model List<SanPham>
@{
    int maPn = (int)ViewBag.MaPn;
    string currentSearch = ViewBag.CurrentSearch as string ?? "";

}
<div class="container-fluid pt-4 px-4">
    <div class="bg-white rounded shadow p-4 border">
        <h2>Chọn sản phẩm để thêm vào phiếu nhập</h2>
        <form method="get" asp-action="ThemChiTiet">
            <input type="hidden" name="id" value="@maPn" />
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="search" placeholder="Tìm sản phẩm..." value="@currentSearch" />
                <button class="btn btn-primary" type="submit">Tìm</button>
                <a class="btn btn-secondary" href="@Url.Action("ThemChiTiet", new { id = maPn })">Reset</a>
            </div>
        </form>

        <table class="table table-bordered" id="productTable">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá gốc</th>
                    <th>Đơn giá</th>
                    <th>Số lượng còn</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sp in Model)
                {
                    <tr>
                        <td><img src="~/img/product/dochoi/@sp.HinhAnh" width="60" /></td>
                        <td class="tenSp">@sp.TenSanPham</td>
                        <td>@sp.GiaGoc.ToString("N0")</td>
                        <td>@sp.DonGia.ToString("N0")</td>
                        <td>@sp.SoLuong</td>
                        <td>
                            <button class="btn btn-primary btn-sm" onclick="moFormNhap(@sp.MaSp, '@sp.TenSanPham')">Chọn</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


// form nhập số lượng
<div class="modal" tabindex="-1" role="dialog" id="formNhap">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-action="ThemChiTiet">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm sản phẩm vào phiếu nhập</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="MaPn" value="@maPn" />
                    <input type="hidden" name="MaSp" id="MaSp" />
                    <div class="mb-3">
                        <label>Tên sản phẩm</label>
                        <input type="text" class="form-control" id="TenSp" readonly />
                    </div>
                    <div class="mb-3">
                        <label>Số lượng</label>
                        <input type="number" name="SoLuong" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Giá nhập</label>
                        <input type="number" name="GiaNhap" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">OK</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function moFormNhap(maSp, tenSp) {
            document.getElementById("MaSp").value = maSp;
            document.getElementById("TenSp").value = tenSp;

            var myModal = new bootstrap.Modal(document.getElementById('formNhap'));
            myModal.show();
        }
    </script>
}
