@model List<DoAnWebBanDoChoi.Models.NhaCungCap>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-white rounded shadow p-4 border">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold text-primary mb-0">Nhà cung cấp</h5>
                    <div>
                        <a asp-action="DanhSachXoa" class="btn btn-danger me-2">
                            <i class="fa fa-trash me-1"></i> Xóa nhà cung cấp
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus me-1"></i> Thêm nhà cung cấp
                        </a>
                    </div>
                </div>

                <table class="table table-bordered table-striped table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ncc in Model)
                        {
                            <tr>
                                <td class="text-center">@ncc.MaNcc</td>
                                <td>@ncc.TenNhaCungCap</td>
                                <td>@ncc.Email</td>
                                <td>@ncc.DienThoai</td>
                                <td>@ncc.DiaChi</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@ncc.MaNcc" class="btn btn-sm btn-warning">
                                        <i class="fa fa-edit me-1"></i> Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
