@model List<DoAnWebBanDoChoi.Models.NhaCungCap>

<div class="container pt-4 px-4">
    <div class="bg-white rounded shadow p-4 border">
        <h5 class="mb-4 fw-bold text-danger">Nhà cung cấp có thể xóa</h5>

        @if (!Model.Any())
        {
            <div class="alert alert-warning d-flex align-items-center">
                <span class="me-2" style="font-size: 1.5rem;">⚠️</span>
                <div>Không có nhà cung cấp nào có thể xóa.</div>
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-danger text-center">
                    <tr>
                        <th>#</th>
                        <th>Tên nhà cung cấp</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Địa chỉ</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ncc in Model)
                    {
                        <tr>
                            <td class="text-center">@ncc.MaNcc</td>
                            <td>@ncc.TenNhaCungCap</td>
                            <td>@ncc.Email</td>
                            <td>@ncc.DienThoai</td>
                            <td>@ncc.DiaChi</td>
                            <td class="text-center">
                                <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa nhà cung cấp này?')">
                                    <input type="hidden" name="id" value="@ncc.MaNcc" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash me-1"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <a asp-action="NhaCungCap" class="btn btn-secondary mt-3">
            <i class="fa fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>
