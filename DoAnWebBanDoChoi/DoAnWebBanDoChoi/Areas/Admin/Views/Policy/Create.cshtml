@model DoAnWebBanDoChoi.Models.Policy

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-white rounded shadow p-4 border">
                <h5 class="fw-bold text-primary mb-4">Thêm chính sách</h5>

                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label">Tiêu đề chính sách</label>
                        <input asp-for="TenChinhSach" class="form-control" />
                        <span asp-validation-for="TenChinhSach" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nội dung</label>
                        <textarea asp-for="NoiDung" id="editor" class="form-control"></textarea>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save me-1"></i> Lưu
                    </button>

                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fa fa-arrow-left me-1"></i> Quay lại
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
