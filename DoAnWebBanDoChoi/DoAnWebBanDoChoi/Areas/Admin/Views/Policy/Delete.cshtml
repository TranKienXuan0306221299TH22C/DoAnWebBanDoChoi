@model DoAnWebBanDoChoi.Models.Policy

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-white rounded shadow p-4 border">
                <h5 class="fw-bold text-danger mb-4">Xóa chính sách</h5>

                <p><strong>Tiêu đề:</strong> @Model.TenChinhSach</p>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>
