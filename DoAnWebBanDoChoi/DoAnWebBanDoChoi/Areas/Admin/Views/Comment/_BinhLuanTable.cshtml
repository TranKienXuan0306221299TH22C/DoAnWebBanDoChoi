@model List<DoAnWebBanDoChoi.ViewModels.SanPhamDaMuaVM>

<table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3">Không có sản phẩm nào.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/img/product/dochoi/@item.HinhAnh" alt="@item.TenSanPham"
                             class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
                    </td>
                    <td>@item.TenSanPham</td>
                    <td>@item.DonGia.ToString("N0") đ</td>
                </tr>
            }
        }
    </tbody>
</table>
