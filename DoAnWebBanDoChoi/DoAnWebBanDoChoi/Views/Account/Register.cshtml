@model DoAnWebBanDoChoi.ViewModels.RegisterVM
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Đăng ký";
}

<div class="container">
    <div class="signup-content">
        <div class="signup-image">
            <figure><img src="~/Account/images/signup-image.jpg" alt="sign up image"></figure>
            <a asp-controller="Home" asp-action="Index" class="signup-image-link">Home</a>
        </div>

        <div class="signup-form">
            <h2 class="form-title">Đăng ký</h2>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="form-group">
                    <label asp-for="TenDangNhap">Tên đăng nhập</label>
                    <input asp-for="TenDangNhap" placeholder="Ít nhất 6 ký tự" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" placeholder="Nhập email hợp lệ" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatKhau">Mật khẩu</label>
                    <input asp-for="MatKhau" placeholder="Gồm chữ và số" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="XacNhanMatKhau">Xác nhận mật khẩu</label>
                    <input asp-for="XacNhanMatKhau" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                </div>

                <div class="form-group form-button">
                    <button type="submit">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
