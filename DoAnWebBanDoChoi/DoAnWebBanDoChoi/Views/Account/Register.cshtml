    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form asp-action="Register" method="post" class="register-form" id="register-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group">
                        <label for="TenDangNhap"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="MatKhau"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="MatKhau" class="form-control" placeholder="Mật khẩu" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="XacNhanMatKhau"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="XacNhanMatKhau" class="form-control" placeholder="Xác nhận mật khẩu" />
                        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                    </div>

                    <div class="form-group form-button">
                        <button type="submit" class="form-submit">Đăng ký</button>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/Account/images/signup-image.jpg" alt="sign up image"></figure>
            <a asp-controller="Home" asp-action="Index" class="signup-image-link">Home</a>
            </div>
         
        </div>
    </div>


@section Scripts {
