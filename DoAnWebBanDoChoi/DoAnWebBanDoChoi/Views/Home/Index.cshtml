@model DoAnWebBanDoChoi.ViewModels.TrangChuVM
@using X.PagedList.Mvc.Core
@using DoAnWebBanDoChoi.Helpers
@{
    ViewData["Title"] = "Trang chủ";
    var daDangNhap = Context.Session.GetString("DangNhap") == "true";
}

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5 bg-light p-3 rounded shadow-sm">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <form method="get" asp-controller="Home" asp-action="Category">
                            <div style="display: flex; align-items: center; gap: 8px;">
                                <label for="sort" style="font-weight: bold;">Sắp xếp theo:</label>
                                <select name="sort" id="sort" onchange="this.form.submit()">
                                    <option value="">-- Chọn --</option>
                                    <option value="new">Mới nhất</option>
                                    <option value="price-asc">Giá tăng dần</option>
                                    <option value="price-desc">Giá giảm dần</option>
                                    <option value="hot">Bán chạy</option>
                                   
                                    <option value="all">Tất cả</option>
                                </select>
                            </div>
                        </form>

                    </div>
                    @await Component.InvokeAsync("DanhMuc")


             @*      ghichuthem2caidooiday *@

                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="product__discount">
                    <div class="section-title product__discount__title">
                        <h2>Sản phẩm mới</h2>
                    </div>
                  
                    <!-- Carousel container -->
                    <div class="product-carousel">
                        @foreach (var sp in Model.SanPhamMoi)
                        {
                            <div class="product__discount__item">
                                <div class="product__discount__item__pic">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-slug="@sp.Slug" asp-route-id="@sp.MaSp">
                                        <img src="@Url.Content("~/img/product/dochoi/" + sp.HinhAnh)" alt="@sp.TenSanPham" class="product__item__pic" />
                                    </a>
                                    <ul class="product__item__pic__hover">
                                        <li>
                                            @if (daDangNhap)
                                            {
                                                <a href="javascript:;" class="btn-yeu-thich" data-id="@sp.MaSp">
                                                    <i class="fa fa-heart"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="javascript:;" onclick="xacNhanDangNhap()">
                                                    <i class="fa fa-heart"></i>
                                                </a>
                                            }
                                        </li>
                                        <li>
                                            @if (daDangNhap)
                                            {
                                                <a href="javascript:;" onclick="submitThemGio(@sp.MaSp)">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="javascript:;" onclick="xacNhanDangNhap()">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            }
                                        </li>
                                    </ul>
                                </div>
                                <div class="product__discount__item__text">
                                    <h5><a href="/Home/Detail/@sp.MaSp">@sp.TenSanPham</a></h5>
                                    <div class="product__item__price">@sp.DonGia.ToString("N0") ₫</div>
                                    
                                </div>
                            </div>
                        }
                    </div>

                </div>
                <!-- Danh sách sản phẩm  -->
       
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-12">
                            
                            <div class="featured__controls">
                                <ul>
                                    <li >
                                        <a asp-action="Index" class="text-pink-500 hover:text-pink-700 font-semibold">Tất cả</a>
                                    </li>
                                
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var sp in Model.DanhSachSanPham)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-slug="@sp.Slug" asp-route-id="@sp.MaSp">
                                        <img src="@Url.Content("~/img/product/dochoi/" + sp.HinhAnh)" alt="@sp.TenSanPham" class="product__item__pic" />
                                    </a>
                                    <ul class="product__item__pic__hover">
                                        <li>
                                            @if (daDangNhap)
                                            {
                                                <a href="javascript:;" class="btn-yeu-thich" data-id="@sp.MaSp">
                                                    <i class="fa fa-heart"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="javascript:;" onclick="xacNhanDangNhap()">
                                                    <i class="fa fa-heart"></i>
                                                </a>
                                            }
                                        </li>
                                        <li>
                                            @if (daDangNhap)
                                            {
                                                <a href="javascript:;" onclick="submitThemGio(@sp.MaSp)">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="javascript:;" onclick="xacNhanDangNhap()">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            }
                                        </li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6>
                                        <a asp-controller="Home" asp-action="Detail" asp-route-slug="@sp.Slug" asp-route-id="@sp.MaSp">
                                            @sp.TenSanPham
                                        </a>
                                    </h6>
                                    <h5>@sp.DonGia.ToString("N0") đ</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="product__pagination">
                    <div class="text-center mt-4">
                        @Html.PagedListPager(Model.DanhSachSanPham,
                                 page => Url.Action("Index", new { page, sort = Context.Request.Query["sort"], loai = Context.Request.Query["loai"] }),
                                 new PagedListRenderOptions
                        {
                            UlElementClasses = new[] { "pagination", "justify-content-center" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" },
                            ActiveLiElementClass = "active"
                        }
                                 )
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form id="form-them-gio" style="display:none;">
    <input type="hidden" name="maSp" id="inputMaSp" />
    <input type="hidden" name="soLuong" id="inputSoLuong" value="1" />
</form>

@section Scripts {
   

    <script>
  
           $(document).ready(function () {
            $('.product-carousel').slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
                speed: 1000,
                infinite: true,
                arrows: true,
                dots: false,
            });
        });
        //sản phẩm yêu thích
            function xacNhanDangNhap() {
            if (confirm("Bạn cần đăng nhập. Bạn có muốn đăng nhập ngay không?")) {
                window.location.href = '/Account/Login';
            }
        }

        // Khi DOM đã sẵn sàng
        $(document).ready(function () {
            $(".btn-yeu-thich").click(function (e) {
                e.preventDefault();

                const maSp = $(this).data("id"); // lấy mã sản phẩm
                const icon = $(this).find("i");

            console.log("📦 Mã sản phẩm gửi đi:", maSp); // ✅ log gửi mã
                $.ajax({
                    url: '/Favorite/Toggle',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ maSp: maSp }),
                    success: function (data) {
                        if (data.success) {
                             console.log("🔁 Phản hồi server:", data); // ✅ log phản hồi
                            if (data.status === "added") {
                                icon.addClass("text-danger"); // ❤️ đã yêu thích
                            } else {
                                icon.removeClass("text-danger"); // 🤍 xoá yêu thích
                            }
                              capNhatSoLuongYeuThich();
                        } else {
                            alert(data.message); // thông báo lỗi (chưa đăng nhập, lỗi DB...)
                        }
                    },
                    error: function () {
                        alert("Có lỗi xảy ra khi thêm sản phẩm yêu thích.");
                    }
                });
            });
        });
       

    </script>
}
