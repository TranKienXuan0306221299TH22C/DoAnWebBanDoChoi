                        {
                            @*     <a asp-controller="Account" asp-action="Logout"><i class="fa fa-user"></i> Logout</a> *@
                            <div class="header__top__right__auth"
                                 style="position: absolute; top: 10px; right: 15px; z-index: 99;">

                                <a asp-controller="Profile" asp-action="Index"
                                   class="d-flex align-items-center text-decoration-none"
                                   style="max-width: 250px;">
                                    <img src="/img/user.png"
                                         class="rounded-circle"
                                         width="30"
                                         height="30"
                                         style="object-fit: cover !important;">
                                    <span class="ms-2 fw-semibold text-dark" style="font-size: 12px !important;">
