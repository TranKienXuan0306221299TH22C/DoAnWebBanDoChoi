@model List<DoAnWebBanDoChoi.ViewModels.SanPhamDaMuaVM>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="mb-4">Danh sách sản phẩm đã mua</h4>
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                               
                                <img src="~/img/product/dochoi/@item.HinhAnh" alt="@item.TenSanPham" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
                            </td>
                            <td>@item.TenSanPham</td>
                            <td>@item.DonGia.ToString("N0") đ</td>
                            
                            <td>
                                @if (!item.DaBinhLuan)
                                {
                                    <a asp-action="ThemBinhLuan" asp-route-maSp="@item.MaSp" class="btn btn-primary btn-sm">Bình luận</a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>Đã bình luận</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
           
            <div class="d-grid gap-2 d-md-flex justify-content-end mt-4 mb-5">
                <a asp-controller="Profile"  asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
